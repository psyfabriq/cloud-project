    <parent>
        <artifactId>pfq-cloud</artifactId>
        <groupId>ru-psyfabriq</groupId>
        <version>0.0.1</version>
    </parent>

    <developers>
        <developer>
            <id>psyfabriq</id>
            <name>Ilia Podstavkov</name>
            <email>psyfabriqdev@gmail.com</email>
        </developer>
    </developers>

    <modules>
        <module>app-pfq-api</module>
        <module>app-pfq-rss</module>
        <module>app-pfq-notification</module>
        <module>app-pfq-auth</module>
        <module>app-pfq-enterprise</module>
        <module>db-config</module>
    </modules>

    <dependencies>
        <dependency>
            <groupId>org.springframework.cloud</groupId>
            <artifactId>spring-cloud-starter-netflix-eureka-client</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-data-jpa</artifactId>
        </dependency>
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <optional>true</optional>
        </dependency>

        <!-- Test -->
        <dependency>
            <groupId>junit</groupId>
